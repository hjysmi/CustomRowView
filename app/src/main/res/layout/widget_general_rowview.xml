<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:context="com.dkhs.customrowview.MainActivity">

    <ImageView
        android:id="@+id/mWidgetRowIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        tools:background="@drawable/ic_my_funds"
        />

    <TextView
        android:id="@+id/mWidgetRowlabel"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="35dp"
        tools:text="Hello World!"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"/>
    <ImageButton
        android:id="@+id/mWidgetRowActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_image_right"
        android:layout_gravity="right"/>
</LinearLayout>
